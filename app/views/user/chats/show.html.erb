<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h2 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとのチャット</h2>
      <table>
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
          <tr class="row justify-content-center message">
            <td class="col-2">
              <%= link_to attachment_image_tag(chat.user, :profile_image, fallback: "no_image.jpg", size:'80x80', class:"profile-image align-top rounded-circle"), user_path(chat.user) %>
            </td>
            <!-- メッセージを右側に表示する -->
            <td class="col-10">
              <%= chat.user.name %> <br>
              <!-- 自分用の吹き出しCSSクラスを適用する -->
              <div class="says">
                <p style='text-align: left;'><%= chat.message %></p>
              </div>
            </td>
          </tr>

        <% else %>
          <tr class="row justify-content-center message">
            <!-- メッセージを左側に表示する -->
            <td class="col-10">
              <div class="col-11 float-right">
                <%= chat.user.name %> <br>
              </div>
              <!-- 自分以外用の吹き出しCSSクラスを適用する -->
              <div class="other-user-says">
                <p style='text-align: left;'><%= chat.message %></p>
              </div>
            </td>
            <td class="col-2">
              <%= link_to attachment_image_tag(chat.user, :profile_image, fallback: "no_image.jpg", size:'80x80', class:"profile-image align-top rounded-circle"), user_path(chat.user) %>
            </td>
          </tr>
        <% end %>
      <% end %>
      </table>
      <span>
        <%= form_with model: @chat do |f| %>
          <%= f.text_field :message %>
          <%= f.hidden_field :room_id %>
        <% end %>
      </span>
    </div>
  </div>
</div>
