<% if user_signed_in? %>
    <% if current_user.already_baded?(post) %>
        <%= link_to post_bads_path(post), method: :delete, remote: true do %>
            <i class="far fa-thumbs-down" aria-hidden="true" style="color: bule;">
              <%= post.bads.count %>
            </i>
        <% end %>
    <% else %>
        <%= link_to post_bads_path(post), method: :post, remote: true do %>
            <i class="fas fa-thumbs-down" aria-hidden="true" style="color: #C0C0C0;">
              <%= post.bads.count %>
            </i>
        <% end %>
    <% end %>
<% else %>
    <i class="far fa-thumbs-down" aria-hidden="true">
      <%= post.bads.count %>
    </i>
<% end %>
