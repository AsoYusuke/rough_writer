<div class="container">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <table class="table table-hover table-invers">
          <div class="col-md-2">
            <%= link_to user_path(@post.user_id) do %>
              <%= attachment_image_tag(@post.user, :profile_image, size: "80x80", format: 'jpeg', class:"mt-3 rounded-circle", fallback: "no_image.jpg") %><br>
              <%= @post.user.name %>
            <% end %>
          </div>
          <div class="col-md-9">
            <p class="card-text mt-3">
              <%= link_to(post_path(@post.id), class:"text-dark") do %>
                ジャンル：<%= @post.genre.genre_name %>
              <% end %>
            </p>
            <p class="card-title">
            <%= link_to(post_path(@post.id), class:"text-dark") do %>
              タイトル : <%= @post.title %>
            <% end %>
            </p>
            <%= @post.body %>
              <!--%= attachment_image_tag @post, :image, size: '200x150', class:"attachment product product_image fallback"%>-->
            <% if @post.user == current_user %>
              <%= link_to '編集', edit_post_path(@post), class: "btn btn-sm btn-success edit_book_#{@post.id}" %>
              <%= link_to '削除', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}"%>
            <% end %>
    
          </div>
        </table>
    
        <div class="row">
          <% if user_signed_in? %>
            <div class="comment-create">
              <h3 class="text-left">レビューを投稿する</h3>
              <%= render 'user/comments/form', comment: @comment, post: @post %>
            </div>
          <% end %>
          <br>
          <ul>
            <li class="comment-create">
              <h3 class="text-left title">レビュー</h3>
            </li>
            <li id="comments_area">
              <%= render 'user/comments/index', comments: @comments %>
            </li>
          </ul>
        </div>
    
    </div>
    </div>