<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class='table table-hover table-inverse'>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= attachment_image_tag(post.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg") %><br>
                <%= post.user.name %>
              </td>
              <td><%= post.title %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!--%= paginate @posts %>-->
    </div>
  </div>
</div>