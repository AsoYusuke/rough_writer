<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2>新規投稿</h2>
      <!--部分テンプレ準備する-->
      <%= form_with model: @post, local:true do |f| %>
        <div class="form_input">
          <%= f.label :genre_id, "ジャンル" %><br/>
          <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, :include_blank => "ジャンルを選択してください" %>
        </div>

        <div class="form-group">
          <%= f.label :投稿画像 %>
          <%= f.attachment_field :image, class: 'post_image' %>
        </div>

        <div class="form-group">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: 'form-control post_title' %>
        </div>

        <div class="form-group">
          <%= f.label :本文 %>
          <%= f.text_field :body, class: 'form-control post_body' %>
        </div>

        <div class="form-group">
          <%= f.submit "投稿",class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>