<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card w-100 mx-auto mt-4 shadow-lg">
        <div class="card-body">
          <h2>新規投稿</h2>
          <!--部分テンプレ準備する-->
          <%= form_with model: @post, local:true do |f| %>
            <div class="form_input mt-3">
              <%= f.label "ジャンル:" %><br/>
              <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, :include_blank => "ジャンルを選択してください" %>
            </div>

            <div class="form-group mt-4">
              <%= f.label "投稿画像:" %><br>
              <%= f.attachment_field :image, class: 'post_image' %>
            </div>

            <div class="form-group mt-4">
              <%= f.label "タイトル:" %>
              <%= f.text_field :title, class: 'form-control post_title' %>
            </div>

            <div class="form-group mt-4">
              <%= f.label "本文:" %>
              <%= f.text_area :body, :size=>"50x10", class: 'form-control post_body' %>
            </div>

            <div class="form-group mt-4">
              <%= f.submit "投稿",class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>