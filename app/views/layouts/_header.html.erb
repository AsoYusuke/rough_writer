<header class="sticky-top">
  <nav class="navbar navbar-expand-lg ">
    <div class="container">
      <a class="nav-link", href="/"><span>RoughWriter</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <!--customerのヘッダー-->
            <div class="nav-link text-light mr-5 mt-3">
              ようこそ <%= current_user.name %> さん
            </div>
            <li class="header-items"><%= link_to ' 投稿する', new_post_path, class: "nav-link text-light fas fa-calendar-plus" %></li>
            <li class="header-items"><%= link_to ' 投稿一覧', posts_path, class: "nav-link text-light fas fa-file-alt" %></li>
            <li class="header-items"><%= link_to ' チャット', chats_path(current_user), class: "nav-link text-light fas fa-comment-dots" %></li>
            <li class="header-items"><%= link_to ' マイページ', user_path(current_user), class: "nav-link text-light fas fa-user" %></li>
            <li class="header-items"><%= link_to ' 通知', notifications_path, class: "nav-link text-light fas fa-bell" %></li>
            <li class="header-items"><%= link_to ' ログアウト', destroy_user_session_path, method: :delete, class: "nav-link text-light fas fa-sign-out-alt" %></li>
          <% elsif admin_signed_in? %>
          <!--adminのヘッダー-->
            <li class="header-items"><%= link_to ' 投稿一覧', admin_posts_path,class: "nav-link text-light fas fa-users" %></li>
            <li class="header-items"><%= link_to ' ユーザー一覧', admin_users_path, class: "nav-link text-light fas fa-list-alt" %></li>
            <li class="header-items"><%= link_to ' ジャンル一覧', admin_genres_path, class: "nav-link text-light fas fa-tags" %></li>
            <li class="header-items"><%= link_to ' ログアウト', destroy_admin_session_path, method: :delete, class:"nav-link text-light fas fa-sign-out-alt" %></li>
          <% else %>
          <!--ログイン前のヘッダー-->
            <li class="header-items"><%= link_to ' ランキング', class: "nav-link text-light fas fa-grin-stars" %></li>
            <li class="header-items"><%= link_to ' 新規登録', new_user_registration_path, class: "nav-link text-light fas fa-user-plus" %></li>
            <li class="header-items"><%= link_to ' ログイン', new_user_session_path, class: "nav-link text-light fas fa-sign-in-alt" %></li>
          <% end %>
        </ul>
      </div>
  </nav>
</header>