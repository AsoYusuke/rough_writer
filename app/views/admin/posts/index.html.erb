<div class="container">
  <div class="row">
   <div class="col-lg-10 offset-1">
     <h3 class="text-center text-secondary">商品一覧</h3>
       <table class="table">
        <div class="text-right">
        <thead>
         <tr>
          <th>投稿ID</th>
          <th>タイトル</th>
          <th>ジャンル</th>
          <th>投稿画像</th>
          <th>高評価</th>
          <th>低評価</th>
          <th></th>
         </tr>
       </thead>
        <tbody>
         <% @posts.each do |post| %>
         <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.genre.genre_name %></td>
          <td><%= attachment_image_tag post, :image, size: "40x40", fallback: "no_image2.jpg" %></td>
          <td><%= post.goods.count %></td>
          <td><%= post.bads.count %></td>
          <td><%= link_to "表示する", admin_post_path(post), class: "btn btn-outline-secondary text-center" %></td>
         </tr>
         <% end %>
        </tbody>
       </table>
       <%= paginate @posts %>
    </div>
  </div>
</div>
