<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
    <h3 class="user-edit text-secondary text-center my-3">ユーザー情報</h3>
      <div class="card w-100 mx-auto mt-4 mb-4 shadow-lg">
        <div class="card-body">
          <div class="row">
            <table class="table table-hover table-invers">
              <div class="col-md-2">
                <div class="user-profile_image text-center">
                  <%= attachment_image_tag(@post.user, :profile_image, size: "80x80", class:"mt-3 rounded-circle", fallback: "no_image.jpg") %>
                  <div class="text-center">
                    <%= @post.user.name %>
                  </div>
                </div>
              </div>

              <div class="col-md-9">
                <p class="card-genre mt-3 text-center text-secondary">
                  ジャンル：<%= @post.genre.genre_name %>
                </p>
                <p class="card-title text-center">
                <%= link_to(post_path(@post.id), class:"text-dark") do %>
                  <strong><%= @post.title %></strong>
                <% end %>
                </p>
                <p class="card-body">
                  <%= @post.body %><br>
                </p>
                <%= attachment_image_tag @post, :image, size: '400x400', class:"attachment product product_image fallback"%><br>
                <p class="card-edit text-secondary text-right mt-2">
                  <%= link_to '削除', admin_post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}"%>
                  <%= @post.created_at.to_s(:datetime_jp) %>
                </p>
              </div>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>